<header class="app-header">
  <div class="banner-box">
    <section class="banner"></section>
  </div>

  <section class="description">
    <img class="avatar" src="<%- url_for(theme.avatar) %>" alt="avatar" />
    <h1 class="title"> <%- theme.title %> </h1>
    <h3 class="subtitle"> <%- theme.subtitle %> </h3>
  </section>

  <ul class="social-list">
    <a href="<%- theme.social.twitter %>">Twitter</a>
    <a href="<%- theme.social.github %>">GitHub</a>
    <a href="<%- theme.social.weibo %>">Weibo</a>
  </ul>
</header>
